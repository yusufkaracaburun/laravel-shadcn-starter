<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd" bootstrap="vendor/autoload.php" colors="true">
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>app</directory>
        </include>
        <exclude>
            <!-- Exclude migrations - they are tested by running them -->
            <directory>database/migrations</directory>
            <!-- Exclude seeders - they are tested by running them -->
            <directory>database/seeders</directory>
            <!-- Exclude factories - they are tested through model tests -->
            <directory>database/factories</directory>
            <!-- Exclude config files - they are configuration, not logic -->
            <directory>config</directory>
            <!-- Exclude routes - they are tested through feature tests -->
            <directory>routes</directory>
            <!-- Exclude bootstrap - framework bootstrap code -->
            <directory>bootstrap</directory>
            <!-- Exclude resources - views and assets don't need code coverage -->
            <directory>resources</directory>
            <!-- Exclude storage - generated files -->
            <directory>storage</directory>
            <!-- Exclude public - static assets -->
            <directory>public</directory>
            <!-- Exclude empty Controller base class -->
            <file>app/Http/Controllers/Controller.php</file>
        </exclude>
    </source>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_MAINTENANCE_DRIVER" value="file"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="BROADCAST_CONNECTION" value="null"/>
        <env name="CACHE_STORE" value="file"/>
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="DB_DATABASE" value=":memory:"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="database"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="NIGHTWATCH_ENABLED" value="false"/>
    </php>
</phpunit>
