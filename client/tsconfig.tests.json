{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tests.tsbuildinfo",
    "types": [
      "vite/client",
      "@playwright/test",
      "node"
    ],
    /* Test-specific overrides */
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmit": true
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
